<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_back"
        android:layout_width="@dimen/week_button_size"
        android:layout_height="@dimen/week_button_size"
        android:text="&lt;"
        android:padding="0dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_week"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="2dp"/>

    <Button
        android:id="@+id/button_week"
        android:layout_width="180dp"
        android:layout_height="@dimen/week_button_size"
        android:text="Week"
        android:padding="0dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_forward"
        android:layout_width="@dimen/week_button_size"
        android:layout_height="@dimen/week_button_size"
        android:text="&gt;"
        android:padding="0dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_week"
        android:layout_marginStart="2dp" />

</androidx.constraintlayout.widget.ConstraintLayout>